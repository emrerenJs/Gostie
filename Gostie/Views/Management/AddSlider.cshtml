@model Gostie.Entities.Slider
@{
    ViewData["Title"] = "AddSlider";
    Layout = "_PanelLayout";
}
<div class="container">
    <div class="card text-center">
        <div class="card-header">
            <h1>Yeni Slider</h1>
        </div>
        <div class="card-body" id="AddSliderCard">
            <h5 class="card-title">Yeni Slider</h5>
            <form asp-controller="Management" asp-action="AddSlider" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Resim:</label><br />
                    <img src="~/images/assets/not-found.png" id="PreviewImage" width="620" height="250" /><br /><br />
                </div>
                <div class="row justify-content-center">
                    <div style="width:500px">
                        <input class="form-control" type="file" id="ProductImage" name="SliderImage" />
                        <div class="form-group">
                            <label>Slider başlığı:</label>
                            <input class="form-control" type="text" asp-for="SliderHeader" placeholder="Günlük kampanya.." />
                        </div>
                        <div class="form-group">
                            <label>Açıklama:</label>
                            <textarea rows="3" class="form-control" asp-for="SliderDescription" placeholder="Kampanyamız hakkında bilgi.."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary" />Ekle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
