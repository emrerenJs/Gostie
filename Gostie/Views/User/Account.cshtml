@model Gostie.Models.User.AccountViewModel
@{
    ViewData["Title"] = "Account";
    Layout = "_UserLayout";
}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Account","User")">Hesap <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Basket","User")">Sepetim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Orders","User")">Siparişler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Logout","User")">Çıkış</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <form class="card text-center" method="post" asp-action="EditCustomer" asp-controller="User">
            <div class="card-header">
                <h1>Hesap Bilgileri</h1>
            </div>
            <div class="card-body">
                <div class="form-row">
                    <div class="col-lg-6">
                        <input type="hidden" asp-for="Customer.CustomerID"/>
                        <input type="text" placeholder="İsim" asp-for="Customer.FirstName" class="form-control" />
                    </div>
                    <div class="col-lg-6">
                        <input type="text" placeholder="Soyisim" asp-for="Customer.LastName" class="form-control" />
                    </div>
                </div>
                <br />
                <div class="form-row">
                    <div class="col-lg-6">
                        <textarea rows="3" type="text" placeholder="Adres 1" asp-for="Customer.Adress1" class="form-control">
                        </textarea>
                    </div>
                    <div class="col-lg-6">
                        <textarea rows="3" type="text" placeholder="Adres 2" asp-for="Customer.Adress2" class="form-control">
                        </textarea>
                    </div>
                </div>
                <br />
                <div class="form-row">
                    <div class="col-lg-6">
                        <input type="text" placeholder="Telefon" asp-for="Customer.Phone" class="form-control" />
                    </div>
                    <div class="col-lg-6">
                        <select class="form-control" asp-for="City.CityID" asp-items="Model.Cities"></select>
                    </div>
                </div>
            </div>
            <div class="card-footer text-muted">
                <button type="submit" class="btn btn-primary">
                    Kaydet
                </button>
            </div>
        </form>
    </div>
