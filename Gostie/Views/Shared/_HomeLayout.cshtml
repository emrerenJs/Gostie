<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="https://kit.fontawesome.com/cea5c7fdd4.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Home.css" />
</head>
<body>
    <!--MAİN HEADER-->
    <nav class="navbar navbar-light bg-light border-bottom">
        <a class="navbar-brand" href="@Url.Action("Index","Home")">
            <img src="~/images/assets/logo.png" width="90px" height="40px" />
        </a>
        <form asp-action="Products" asp-controller="Home" class="form-inline d-flex justify-content-center" style="width:40%">
            <div class="input-group" style="width:80%">
                <div class="input-group-prepend">
                    <button type="submit" class="input-group-text" id="basic-addon1">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                <input type="text" name="key" class="form-control" placeholder="Ürün Ara.." aria-label="Ara" aria-describedby="basic-addon1">
            </div>
        </form>
        <div>
            <a href="@Url.Action("Account","User")" style="float:left; margin-right:10px" class="input-group-text point" id="basic-addon1">
                <i class="fas fa-user-circle"></i>
            </a>
            <a href="@Url.Action("Basket","User")" class="input-group-text" id="basic-addon1">
                <i class="fas fa-shopping-cart"></i>
            </a>
        </div>
    </nav>
    <!--MAİN HEADER-->
    <!--NAV HEADER-->
    @{
        var nav = ViewData["NavigationViewModel"] as List<Gostie.Models.Panel.NavigationViewModel>;
    }
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto d-flex justify-content-center">
                @foreach (var item in nav)
                {
                    <li class="nav-item dropdown point">
                        <a class="nav-link dropdown-toggle" class="point" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @item.NavItem.NavItemText
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @foreach (var itemCat in item.NavCategories)
                            {
                                <a class="dropdown-item" href="@Url.Action("Category", "Home", new { category = itemCat.CategoryID })">
                                    @itemCat.CategoryName
                                </a>
                            }
                        </div>
                    </li>
                }
            </ul>
        </div>
    </nav>
    <!--NAV HEADER-->
    <div>
        @RenderBody()
    </div>
    <!--FOOTER-->
    <footer id="footer" style="margin-top:150px">
        <div class="footer-widget">
            <div class="container">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="single-widget">
                            <h2>İletİşİm</h2>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="#">+90 XXX XXX XXXX</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="single-widget">
                            <h2>Adres</h2>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="#">A Mahallesi B sokak C apartman No:0 İZMİR/TÜRKİYE</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="single-widget">
                            <h2>POLİTİKA</h2>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="#">Site Kullanımı</a></li>
                                <li><a href="#">Kişisel Bilgilerin Saklanması</a></li>
                                <li><a href="#">Satış Sistemi</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="single-widget">
                            <h2>Gostie Hakkında</h2>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="#">Gostie site bilgileri</a></li>
                                <li><a href="#">Site harita şeması</a></li>
                                <li><a href="#">Copyright</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-3 col-sm-offset-1">
                        <div class="single-widget">
                            <form action="#" class="searchform">
                                <img src="~/images/assets/logo.png" width="200" height="100"/>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <p class="pull-left" style="color:#666663">Powered by Emre EREN</p>
                </div>
            </div>
        </div>

    </footer>
    <!--FOOTER-->
    <div>
    </div>
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/Home.js"></script>
</body>
</html>
